---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"
import LJText from "../images/luke-james-text.svg"
import LJImage from "../images/luke-james.png"
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="hero relative h-screen overflow-hidden flex items-end">
      <div class="bg-gradient absolute inset-0 w-full h-full z-0"></div>
      <video
        src="./videos/bg-video.mp4"
        autoplay
        muted
        loop
        class="main-video absolute inset-0 object-cover h-full w-full opacity-100 z-[-1]"
      ></video>

      <div
        class="absolute top-[12%] sm:top-[4%] left-1/2 -translate-x-1/2 h-full flex justify-center z-[3]"
      >
        <h2
          class="song-text sm:pt-0 flex justify-center font-headline text-[10rem] md:text-[30rem] lg:text-[45rem] xl:text-[55rem] opacity-[.06] leading-[1]"
        >
          <span>X</span>
          <span>Y</span>
          <span>Z</span>
        </h2>
      </div>

      <div
        class="text-center relative z-[3] md:max-w-[940px] h-full w-full mx-auto flex flex-col justify-between pt-6 sm:pt-8"
      >
        <div>
          <Image
            class="lj-text max-w-[150px] mx-auto opacity-100 mb-[11%] sm:mb-0"
            src={LJText}
            alt="hello"
          />
          <h1
            class="lj-love font-love text-[80px] md:text-[150px] leading-[.8] text-center text-love opacity-100"
          >
            Love
          </h1>
        </div>

        <Image
          class="lj-img max-w-full mx-auto w-full scale-[1.8] sm:scale-[1] relative left-[5%] sm:left-[3%]"
          src={LJImage}
          alt="hello"
        />
      </div>
    </section>
  </main>
</Layout>
