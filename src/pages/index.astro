---
import Layout from "../layouts/Layout.astro"
import { Image } from "astro:assets"
import LJText from "../images/luke-james-text.svg"
import LJImage from "../images/luke-james.png"
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="hero overflow-hidden relative h-screen pt-[100px]">
      <div class="bg-gradient absolute inset-0 w-full h-full z-0"></div>

      <video
        src="./videos/bg-video.mp4"
        autoplay
        muted
        loop
        class="main-video absolute inset-0 object-cover h-full w-full opacity-100 z-[-1]"
      ></video>

      <div
        class="absolute inset-0 h-full flex sm:items-center justify-center z-[3]"
      >
        <h2
          class="song-text pt-[120px] sm:pt-0 -translate-y-[50px] flex md:items-center justify-center font-headline text-[15rem] sm:text-[32rem] lg:text-[40rem] xl:text-[55rem] opacity-[.06] leading-[1]"
        >
          <span>X</span>
          <span>Y</span>
          <span>Z</span>
        </h2>
      </div>

      <div
        class="container relative h-full flex flex-col justify-start mx-auto z-[2]"
      >
        <Image
          class="lj-text max-w-[200px] mx-auto -translate-y-[70px] opacity-100"
          src={LJText}
          alt="hello"
        />
        <!-- <img
          src="/images/luke-james-text.png"
          class="lj-text max-w-[200px] mx-auto -translate-y-[70px] opacity-100"
          alt=""
        /> -->
        <h1
          class="lj-love font-love text-[80px] md:text-[175px] -translate-y-[90px] leading-[1] text-center text-love opacity-100"
        >
          Love
        </h1>

        <div
          class="absolute -bottom-[130px] md:-bottom-[130px] xl:-bottom-[250px] left-1/2 -translate-x-[46%]"
        >
          <Image
            class="lj-img max-w-[560px] sm:max-w-[700px] xl:max-w-[900px] mx-auto scale-[1]"
            src={LJImage}
            alt="hello"
          />
          <!-- <img
            src="./src/images/luke-james.png"
            class="lj-img max-w-[560px] sm:max-w-[700px] xl:max-w-[900px] mx-auto scale-[1]"
            alt=""
          /> -->
        </div>
      </div>
    </section>
  </main>
</Layout>
